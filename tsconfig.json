{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": "./src",
    "outDir": "build",
    "paths": {
      "@class/*": ["classes/*"],
      "@types": ["types"],
      "@utils": ["utils"],
      "@index": ["index"],
      "@command/*": ["commands/*"],
      "@module/*": ["modules/*"],
      "@handler/*": ["handlers/*"],
      "@answer/*": ["answers/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}